<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/image_second"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:onClick="onClickImageSecond"/>

    <EditText
        android:id="@+id/text_set_edit"
        android:layout_below="@id/image_second"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/get_first_activity"
        android:layout_below="@id/text_set_edit"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="@string/get_first_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickGetFirstActivity"/>

</RelativeLayout>